<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    ><RelativeLayout
    android:layout_width="match_parent" android:layout_height="38dp">
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxx号电机"
        android:textSize="13sp"
        android:layout_marginLeft="20dp"
        android:textColor="#333"
        />
    <TextView
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginRight="25px"
        android:layout_marginTop="30px"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_status"
        android:gravity="center"
        android:textColor="@color/common_f"
        android:textSize="12sp"
        android:text="开启"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <View
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dcdcdc"
        />
</RelativeLayout>
    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_v_u"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:text="U：300V"
                android:gravity="center"
                android:background="@color/common_d"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_v_v"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:text="V：300V "
                android:gravity="center"
                android:background="@color/common_d"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_v_w"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:text="W：300V"
                android:gravity="center"
                android:background="@color/common_d"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总运行时间： "
            android:textColor="@color/text_hint"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123：2：23：15"
            android:textColor="@color/title_color"
            android:textSize="12sp"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_isremote"
                android:layout_centerInParent="true"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/remote"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_isauto"
                android:layout_centerInParent="true"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/auto"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_isoff"
                android:layout_centerInParent="true"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/off"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/common_d"/>
</LinearLayout>

