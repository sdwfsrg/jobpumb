<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/return_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="28px"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="水站详情" />

        <ImageView
            android:id="@+id/iv_video"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_video"
            android:layout_marginRight="20px"
            />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/common_d"
                >
                <View
                    android:layout_marginLeft="20dp"
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@color/colorAccent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/title_color"
                    android:text="最新数据"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="氨氮："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_andan"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_andan"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="二氧化氯："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_cloo"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_cloo"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COD："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_cod"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_cod"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="CODmn："
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_codm"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_codm"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电导率："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_ddl"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_ddl"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="溶解氧："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_rjo"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_rjy"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pH值："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_ph"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_ph"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总氮："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_zd"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_zd"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总磷："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_zl"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_zl"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="浊度："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_zhd"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_zhd"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="污泥量："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_wnl"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_wnl"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="水温："
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_sw"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_b"
                            android:textSize="14sp"
                            android:text=""
                            />
                        <TextView
                            android:id="@+id/tv_status_sw"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/common_f"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/common_d"
                >
                <View
                    android:layout_marginLeft="20dp"
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@color/colorAccent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/title_color"
                    android:text="数据分析"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_margin="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btn_week"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="近1天"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:background="@color/common_d"
                />
                <TextView
                    android:id="@+id/btn_mouth"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="近1周"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:background="@color/common_d"
                    />
                <TextView
                    android:id="@+id/btn_season"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="近1月"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:background="@color/common_d"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/btn_year"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="近1年"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:background="@color/common_d"
                    />
            </LinearLayout>
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:text="每小时水温变化(℃)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart1"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:text="每小时浊度变化（tu）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart2"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:text="每小时导电率变化（S/cm）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart3"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:text="每小时余氯变化（mg/L)）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart4"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:text="每小时ORP变化（mv）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart5"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:text="每小时总氯变化（mg/L)）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart6"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>