<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout android:layout_width="match_parent"
        android:id="@+id/header"
        android:layout_height="86px"
        android:background="@color/colorAccent"

       >
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/return_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:padding="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back" />
        </com.zhy.autolayout.AutoRelativeLayout>



        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28px"
            android:textColor="#fff"
            android:textSize="30px"
            android:text="绑定手机号" />



    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="89px">
            <TextView
                android:layout_width="160px"
                android:layout_height="wrap_content"
                android:text="手机绑定"
                android:textColor="@color/gray_three"
                android:textSize="20px"
                />
            <EditText
                android:gravity="center_vertical"
                android:id="@+id/et_new_phone"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18px"
                android:textColor="@color/gray_six"
                android:hint="请输入登录手机号"
                android:textColorHint="@color/gray_nine"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="89px">
            <TextView
                android:layout_width="160px"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/gray_three"
                android:textSize="20px"
                />
            <EditText
                android:id="@+id/et_sms_code"
                android:layout_width="280px"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColor="@color/gray_six"
                android:textColorHint="@color/gray_nine"
                android:textSize="20px" />

            <TextView
                android:layout_marginLeft="30px"
                android:id="@+id/btn_get_code"
                android:layout_width="150px"
                android:layout_height="38px"

                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/colorAccent"
                android:textSize="20px" />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/btn_save"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="64px">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg"
            />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="24px"
            android:textColor="@color/colorAccent"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>